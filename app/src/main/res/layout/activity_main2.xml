<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.nehahimesh.iimb.drawer.AddOrder">>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/iimb2"/>

<TextView
    android:id="@+id/id_sales"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/imageView2"
    android:text="Sales"
    android:textSize="20sp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="28dp"

    />

    <Spinner
        android:id="@+id/month_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/month_arrays"
        android:prompt="@string/month_prompt"
        android:layout_below="@id/id_sales"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/month_spinner"
        android:layout_below="@id/id_sales"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="28dp"
        android:text="Jan 2018"
        android:textSize="20sp"
        />












</RelativeLayout>
</ScrollView>