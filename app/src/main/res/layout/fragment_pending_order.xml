<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iimb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iimb2"/>
        <TextView
            android:id="@+id/sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales"
            android:textSize="24sp"
            android:textColor="#2C662E"
            android:layout_toEndOf="@id/iimb2"
            android:layout_below="@id/iimb2"
            android:layout_marginBottom="20dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 2018"
            android:textSize="24sp"
            android:textColor="#2C662E"
            android:layout_toEndOf="@id/sales"
            android:layout_below="@id/iimb2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="20dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/rs."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs."
            android:textSize="32sp"
            android:textColor="#A63716"
            android:layout_below="@id/sales"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="10dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000"
            android:textSize="32sp"
            android:background="#FFCC80"
            android:layout_below="@id/sales"
            android:layout_toRightOf="@id/rs."
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15EQ"
            android:textSize="28sp"
            android:textColor="#A63716"
            android:layout_below="@id/sales"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="470"
            android:textSize="32sp"
            android:background="#FFCC80"
            android:layout_toLeftOf="@id/eq"
            android:layout_below="@id/sales"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="20dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/pending_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Orders"
            android:textSize="24sp"
            android:textColor="#2C662E"
            android:layout_below="@id/number"
            android:layout_marginLeft="20dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/gogreenbug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GoGreenBug"
            android:textSize="24sp"
            android:layout_below="@id/pending_orders"
            android:layout_marginLeft="20dp"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/go2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_below="@id/pending_orders"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="37dp"

            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/go1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_below="@id/pending_orders"
            android:layout_toLeftOf="@id/go2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"

            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/amazon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazon"
            android:textSize="24sp"
            android:layout_below="@id/gogreenbug"
            android:layout_marginLeft="20dp"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/am2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_below="@id/gogreenbug"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="37dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/am1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_toLeftOf="@id/am2"
            android:layout_below="@id/gogreenbug"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/retail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retail"
            android:textSize="24sp"
            android:layout_below="@id/amazon"
            android:layout_marginLeft="20dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/rt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_below="@id/amazon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="37dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/rt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_toLeftOf="@id/rt2"
            android:layout_below="@id/amazon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textSize="24sp"
            android:layout_below="@id/retail"
            android:layout_marginLeft="20dp"
            android:paddingBottom="30dp"/>


        <TextView
            android:id="@+id/ot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_below="@id/retail"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="37dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/ot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08"
            android:textSize="32sp"
            android:background="#C3FF80"
            android:layout_toLeftOf="@id/ot2"
            android:layout_below="@id/retail"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/Bags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bags in stock"
            android:textSize="24sp"
            android:textColor="#2C662E"
            android:layout_below="@id/others"
            android:layout_marginLeft="20dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4750"
            android:textSize="32sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/others"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFCC80"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/requiredbags"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="Required Bags for Pending Orders"
            android:textSize="24sp"
            android:textColor="#2C662E"
            android:layout_below="@id/Bags"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5400"
            android:textSize="32sp"
            android:background="#FFCC80"
            android:layout_alignParentRight="true"
            android:layout_below="@id/Bags"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="RtlCompat" />


    </RelativeLayout>


</ScrollView>